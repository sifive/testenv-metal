#ifndef METAL__PLATFORM__RISCV_PLIC0_H
#define METAL__PLATFORM__RISCV_PLIC0_H

{% if 'riscv,plic0' in devices %}
{% set riscv_plic0s = devices['riscv,plic0'] %}

{% for plic in riscv_plic0s %}
#define METAL_RISCV_PLIC0_{{ loop.index0 }}_BASE_ADDRESS {{ '0x%x' % plic.regs_by_name["control"][0] }}
