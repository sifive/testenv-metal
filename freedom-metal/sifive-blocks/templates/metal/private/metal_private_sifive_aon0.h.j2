{% else %}
#define AON_WDOG_INTERRUPT_ID 0
#define AON_RTC_INTERRUPT_ID 0
{% endif %}

{% if aon.interrupt_parent is defined %}
{% set driver_string = to_snakecase(aon.interrupt_parent[0].compatible[0]) %}
{% include 'interrupt_dispatch.h.j2' %}
{% endif %}

{% if aon.clocks is defined %}
{% set driver_string = to_snakecase(aon.clocks[0].compatible[0]) %}
{% include 'clock_dispatch.h.j2' %}
{% endif %}

{% endif %}

#endif

